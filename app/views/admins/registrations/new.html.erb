<%content_for :title do%>Create a Pool and Sign Up<%end%>
<h1>Create a Pool and Sign Up</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :pool_name %><br />
  <%= f.text_field :pool_name, :autofocus => true %></div><br>

  <div><%= f.label :first_name %><br />
  <%= f.text_field :first_name %></div><br>

  <div><%= f.label :last_name %><br />
  <%= f.text_field :last_name %></div><br>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div><br>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div><br>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div><br>

  <div><%= f.hidden_field :is_admin, :value => "1" %></div>

  <div><%= f.submit "Sign up", class: "btn btn-primary" %></div><br>
<% end %>

